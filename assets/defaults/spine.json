{
    "root": "", 
    "route": "/",

    "version": { 
      "type": "package",
      "files": [ "public/index.html" ]
    },

    "css": {
        "src": [
            "css"
        ], 
        "target": "public/application.css"
    },

    "js": {
        "commonjs": "require", 
        "libs": [
            "lib"
        ], 
        "modules": [
            "jqueryify", 
            "spine", 
            "spine/lib/local", 
            "spine/lib/list", 
            "spine/lib/ajax", 
            "spine/lib/route", 
            "spine/lib/manager", 
            "spine/lib/relation"
        ], 
        "src": [
            "app"
        ], 
        "target": "public/application.js"
    },

    "static": {
        "/": "public", 
        "/test": "test/public"
    },

    "test": {
        "commonjs": "specs",
        "libs": [],
        "src": [
            "test/specs"
        ], 
        "target": "test/public/specs.js",
        "after": [
          "require('lib/setup');",
          "for (var key in specs.modules) specs(key);"
        ],
        "depends": [
          "#jasmine",
          "common.js",
          "js"
        ],
        "runner": "karma"
    }
}

