{
    "root": "",
    "route": "/",

    "static": {
        "/": "public",
        "/test": "test/public"
    },


    "jobs": {
        "build": [

            {
                "task": "css",
                "src": [
                  "css/*"
                ],
                "target": "public"
            },

            {
                "task": "js",
                "libs": [
                  "lib/**"
                ],
                "src": [
                  "app/**"
                ],
                "target": "public"
            },

            {
                "task": "js",
                "bundle": "specs",
                "libs": [],
                "src": [
                  "test/specs/**"
                ],
                "target": "test/public/specs.js"
            }
        ],

        "test": {
            "task": "phantom",
            "framework": "jasmine"
        },

        "clean": {
            "task": "clean"
        }
    }
}

