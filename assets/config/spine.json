{
    "root": "",
    "route": "/",

    "static": {
        "/": "public",
        "/test": "test/public"
    },

    "defaults": {
      "commonjs": true,
      "npm": false
    },

    "jobs": {
        "build": [

            {
                "task": "css",
                "target": "public/{{app.name}}.css",
                "src": { "src": "*", "srcBase": "css" }
            },

            {
                "task": "js",
                "target": "public/{{app.name}}.js",
                "src": [
                  { "src": "**", "srcBase": "app", "commonjs": true, "npm": true },
                  { "src": "**", "srcBase": "lib", "commonjs": false }
                ]
            },

            {
                "task": "js",
                "target": "test/public/specs.js",
                "src": { "src": "**", "srcBase": "test/specs", "commonjs": "specs" }
            }
        ],

        "test": {
            "task": "phantom",
            "framework": "jasmine"
        },

        "clean": {
            "task": "clean"
        }
    }
}

