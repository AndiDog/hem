{
    "root": "",
    "route": "/",

    "static": {
        "/": "public",
        "/test": "test/public"
    },


    "jobs": {
        "build": [

            {
                "task": "css",
                "src": [
                  "css"
                ],
                "target": "public"
            },

            {
                "task": "js",
                "libs": [
                  "lib"
                ],
                "src": [
                  "app"
                ],
                "target": "public"
            },

            {
                "task": "js",
                "commonjs": "specs",
                "libs": [],
                "depends": [],
                "src": [
                  "test/specs"
                ],
                "target": "test/public/specs.js"
            }
        ],

        "test": {
            "task": "phantom",
            "framework": "jasmine"
        },

        "deploy": {
            "task": "version",
            "src": [ "public/index.html" ]
        },

        "clean": {
            "task": "clean"
        }
    }
}

