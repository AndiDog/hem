{
    "root": "",
    "route": "/",

    "defaults": {
      "bundle": "true",
      "commonjs": "true",
      "npm": false
    },

    "static": {
        "/": "public",
        "/test": "test/public"
    },

    "jobs": {
        "build": [

            {
                "task": "css",
                "bundle": true,
                "src": "css",
                "target": "public"
            },

            {
                "task": "js",
                "bundle": true,
                "src": [
                  { "src": "**", "srcBase": "app", "commonjs": true, "npm": true },
                  { "src": "**", "srcBase": "lib", "commonjs": false }
                ],
                "target": "public"
            },

            {
                "task": "js",
                "src": { "src": "**", "srcBase": "test/specs", "commonjs": "specs" },
                "target": "test/public/specs.js"
            }
        ],

        "test": {
            "task": "phantom",
            "framework": "jasmine"
        },

        "clean": {
            "task": "clean"
        }
    }
}

